{
  "name": "mapgl-vue",
  "version": "1.0.3",
  "description": "A Vue 3 wrapper for the 2GIS MapGL library.",
  "keywords": [
    "2GIS",
    "MapGL",
    "MapGL JS API",
    "Vue",
    "Vue map"
  ],
  "author": "Dmitry Nischeta <nish.dima@gmail.com>",
  "homepage": "https://github.com/dnischeta/mapgl-vue",
  "bugs": {
    "url": "https://github.com/dnischeta/mapgl-vue/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dnischeta/mapgl-vue.git"
  },
  "type": "module",
  "files": [
    "dist/*",
    "LICENSE"
  ],
  "module": "./dist/mapgl-vue.js",
  "types": "./dist/dts/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/mapgl-vue.js",
      "types": "./dist/dts/src/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --fix",
    "format": "prettier --write src/"
  },
  "peerDependencies": {
    "@2gis/mapgl": "^1.51.1",
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.16.11",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vitest/eslint-plugin": "1.1.7",
    "@vue/eslint-config-prettier": "^10.0.0",
    "@vue/eslint-config-typescript": "^14.0.1",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^9.12.0",
    "eslint-plugin-vue": "^9.29.0",
    "jsdom": "^25.0.1",
    "npm-run-all2": "^6.2.3",
    "prettier": "^3.3.3",
    "typescript": "~5.5.4",
    "vite": "^5.4.8",
    "vite-plugin-dts": "^4.2.4",
    "vitest": "^2.1.2",
    "vue-tsc": "^2.1.6"
  }
}
